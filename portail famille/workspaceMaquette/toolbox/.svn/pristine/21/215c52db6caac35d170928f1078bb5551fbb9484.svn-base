<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "dtd/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  
  
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%c] - &lt;%m&gt;%n"/>
        </layout>
    </appender>
    
    <appender name="toolbox" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${user.dir}/toolbox.log" />
        <param name="MaxFileSize" value="512KB" />
        <param name="MaxBackupIndex" value="3" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%c] - %m%n"/>
        </layout>
    </appender>


    
    <logger name="org.springframework">
        <level value="ERROR" />
        <appender-ref ref="toolbox" />
    </logger>

    <logger name="org.springframework.webflow">
        <level value="ERROR" />
        <appender-ref ref="toolbox" />
    </logger>
    
    <logger name="net.sf.jmimemagic">
        <level value="ERROR" />
        <appender-ref ref="toolbox" />
    </logger>
    
    <logger name="com.sedoc.simaform.web.controller">
        <level value="ERROR" />
        <appender-ref ref="toolbox" />
    </logger>
    
    <logger name="com.sedoc.toolbox.LogMesTest">
        <level value="INFO" />
        <appender-ref ref="toolbox" />
    </logger>
    
     <logger name="com.sedoc">
        <level value="ERROR" />
        <appender-ref ref="toolbox" />
    </logger>

    <root>
        <level value="ERROR"/>
        <appender-ref ref="toolbox" />
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
